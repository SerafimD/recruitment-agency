<p id="notice"><%= notice %></p>

<h1>Workers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Contact</th>
      <th>In search</th>
      <th>Salary</th>
      <th>Skills</th>>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workers.each do |worker| %>
      <tr>
        <td><%= worker.name %></td>
        <td><%= worker.contact %></td>
        <td><%= worker.in_search %></td>
        <td><%= worker.salary %></td>
        <td><%= worker.worker_skills.map {|skill| skill.name}%></td>
        <td><%= link_to 'vacancies', controller: 'workers', action: 'vacancies', id: worker.id %></td>
        <td><%= link_to 'Show', worker %></td>
        <td><%= link_to 'Edit', edit_worker_path(worker) %></td>
        <td><%= link_to 'Destroy', worker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

