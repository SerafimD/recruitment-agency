<p id="notice"><%= notice %></p>

<h1>Workers</h1>

<table>
  <thead>
    <tr>
      <th>Surname</th>
      <th>Name</th>
      <th>Middle name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>In search</th>
      <th>Salary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workers.each do |worker| %>
      <tr>
        <td><%= worker.surname %></td>
        <td><%= worker.name %></td>
        <td><%= worker.middle_name %></td>
        <td><%= worker.email %></td>
        <td><%= worker.phone %></td>
        <td><%= worker.in_search %></td>
        <td><%= worker.salary %></td>
        <td><%= link_to 'Show', worker %></td>
        <td><%= link_to 'Edit', edit_worker_path(worker) %></td>
        <td><%= link_to 'Destroy', worker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

