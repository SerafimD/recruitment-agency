<h1>Текущая вакансия :</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Addition date</th>
    <th>Duration</th>
    <th>Salary</th>
    <th>Contact</th>
    <th>Skills</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @vacancy.name %></td>
        <td><%= @vacancy.addition_date %></td>
        <td><%= @vacancy.duration %></td>
        <td><%= @vacancy.salary %></td>
        <td><%= @vacancy.contact %></td>
        <td><%= @vacancy.vacancy_skills.map {|skill| skill.name}%></td>
      </tr>
  </tbody>
</table>

<br>

<h1>Подходящие работники :</h1>
<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Contact</th>
    <th>In search</th>
    <th>Salary</th>
    <th>Skills</th>>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @workers.each do |worker| %>
      <tr>
        <td><%= worker.name %></td>
        <td><%= worker.contact %></td>
        <td><%= worker.in_search %></td>
        <td><%= worker.salary %></td>
        <td><%= worker.worker_skills.map {|skill| skill.name}%></td>
      </tr>
  <% end %>
  </tbody>

</table>

<br>

