<p id="notice"><%= notice %></p>

<h1>Vacancies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Addition date</th>
      <th>Duration</th>
      <th>Salary</th>
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vacancies.each do |vacancy| %>
      <tr>
        <td><%= vacancy.name %></td>
        <td><%= vacancy.addition_date %></td>
        <td><%= vacancy.duration %></td>
        <td><%= vacancy.salary %></td>
        <td><%= vacancy.contact %></td>
        <td><%= link_to 'Show', vacancy %></td>
        <td><%= link_to 'Edit', edit_vacancy_path(vacancy) %></td>
        <td><%= link_to 'Destroy', vacancy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

